{
  "name": "EasyMark",
  "version": "1.1",
  "description": "easymark.pe.kr에 손쉽게 북마크할 수 있는 확장프로그램입니다.",
  "permissions": [
  	
  	"input",
    "bookmarks",
    "http://*/*", 
    "https://*/*",
    "tabs"
  ],
  
  "background": {
  	"scripts": ["jquery.js", "back.js"]
   },
   
  "content_security_policy": "script-src 'self' http://localhost:8080/EasyMark/; object-src 'self'",
  
  "browser_action": {
      "default_title": "EasyMark",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  
  "commands": {
    "recording": {
      "suggested_key": { "default": "Alt+R" },
      "description": "Send a 'toggle-feature' event to the extension"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "MacCtrl+Shift+R"
      }
    }
  },
  
  "manifest_version": 2
}
